root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 100

[*.nix]
max_line_length = 90

[*.{clj,cljs,cljc,lisp,el}]
indent_size = unset

[Makefile]
indent_style = tab

[*.rs]
indent_size = 4

[*.py]
indent_size = 4
