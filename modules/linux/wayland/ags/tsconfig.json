{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "bundler",
    "lib": ["esnext"],
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules/*"]
    },
    "typeRoots": ["./types"]
  }
}
